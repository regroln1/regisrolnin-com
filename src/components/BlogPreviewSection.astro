---
import { getLatestPosts, formatDate, getReadingTime } from '../utils/blog';
import type { BlogPost } from '../utils/blog';

const latestPosts: BlogPost[] = await getLatestPosts(3);
---

<section id="blog" class="py-20 lg:py-32 relative overflow-hidden">
  <!-- Le reste du code reste identique -->
  <div class="absolute inset-0 bg-navy-black"></div>
  
  <div class="absolute top-20 left-10 w-64 h-64 bg-blue-500/30 rounded-full blur-3xl float-slow"></div>
  <div class="absolute bottom-20 right-10 w-80 h-80 bg-purple-500/20 rounded-full blur-3xl float-medium"></div>
  <div class="absolute top-1/2 left-1/4 w-48 h-48 bg-teal-500/25 rounded-full blur-2xl float-fast"></div>

  <div class="relative z-10 container mx-auto px-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <div class="inline-flex items-center px-6 py-3 glass rounded-full mb-8 animate-fade-in">
          <svg class="w-5 h-5 mr-3 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <span class="text-sm font-medium text-amber-400">Expertise Partagée</span>
        </div>
        
        <h2 class="text-4xl lg:text-6xl font-bold text-white mb-8 font-crimson animate-fade-in" style="animation-delay: 0.1s;">
          Nos derniers articles pour faire
          <span class="text-gradient-gold block">progresser votre entreprise</span>
        </h2>
        
        <p class="text-xl text-gray-300 font-crimson max-w-4xl mx-auto animate-fade-in" style="animation-delay: 0.2s;">
          Conseils pratiques, stratégies éprouvées et retours d'expérience pour accélérer votre croissance
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        {latestPosts.map((post: BlogPost, index: number) => (
          <article
            class={`glass-strong p-10 rounded-3xl hover-lift transition-all duration-500 ${
              index === 0 ? 'animate-slide-left' : 
              index === 1 ? 'animate-fade-in' : 'animate-slide-right'
            }`}
            style={`animation-delay: ${0.3 + index * 0.2}s`}
          >
            {post.data.image && (
              <div class="mb-6 -mx-10 -mt-10">
                <img 
                  src={post.data.image} 
                  alt={post.data.title}
                  class="w-full h-48 object-cover rounded-t-3xl"
                />
              </div>
            )}
            
            <div class="flex items-center justify-between mb-6">
              <div class={`w-14 h-14 rounded-2xl flex items-center justify-center ${
                index === 0 ? 'bg-gradient-to-r from-emerald-500 to-emerald-600' : 
                index === 1 ? 'bg-gradient-to-r from-blue-500 to-blue-600' : 'bg-gradient-to-r from-purple-500 to-purple-600'
              }`}>
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <div class="text-right">
                <div class="flex flex-wrap gap-1 mb-2">
                  {post.data.tags.slice(0, 2).map((tag: string) => (
                    <span class={`inline-block px-3 py-1 text-xs font-medium rounded-full glass ${
                      index === 0 ? 'text-emerald-400' : 
                      index === 1 ? 'text-blue-400' : 'text-purple-400'
                    }`}>
                      {tag}
                    </span>
                  ))}
                </div>
                <div class="text-emerald-400 text-sm font-medium">{getReadingTime(post.body)} min</div>
              </div>
            </div>
            
            <h3 class="text-2xl font-bold text-white mb-6 font-crimson leading-tight">
              {post.data.title}
            </h3>
            
            <p class="text-gray-300 font-crimson mb-8 leading-relaxed text-lg">
              {post.data.description}
            </p>

            <div class="flex items-center justify-between mb-6">
              <span class="text-sm text-gray-400 font-crimson">
                {formatDate(post.data.pubDate)}
              </span>
              <span class="text-sm text-gray-400 font-crimson">
                Par {post.data.author}
              </span>
            </div>

            <a href={`/blog/${post.slug}`} class={`group inline-flex items-center font-semibold transition-all duration-300 ${
              index === 0 ? 'text-emerald-400 hover:text-emerald-300' : 
              index === 1 ? 'text-blue-400 hover:text-blue-300' : 'text-purple-400 hover:text-purple-300'
            }`}>
              Lire l'article complet
              <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </article>
        ))}
      </div>

      <div class="text-center animate-fade-in" style="animation-delay: 0.9s;">
        
          href="/blog"
          class="inline-flex items-center px-10 py-5 cta-primary text-white font-semibold rounded-full hover-lift transition-all duration-300 text-lg"
        >
          Découvrir tous nos articles
          <svg class="ml-3 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>