<script>
  // Animated Counters
  function animateCounter(element: HTMLElement, target: number, duration: number = 2000) {
    let start = 0;
    const increment = target / (duration / 16);
    
    const timer = setInterval(() => {
      start += increment;
      if (start >= target) {
        element.textContent = target.toString();
        clearInterval(timer);
      } else {
        element.textContent = Math.floor(start).toString();
      }
    }, 16);
  }

  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.3,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const element = entry.target as HTMLElement;
        
        // Counter animations
        if (element.classList.contains('counter') || element.classList.contains('metric-counter')) {
          const target = parseInt(element.getAttribute('data-target') || '0');
          animateCounter(element, target);
        }
        
        // Problem card animations
        if (element.classList.contains('problem-card')) {
          element.style.transform = 'translateY(0)';
          element.style.opacity = '1';
        }
        
        // Promise card animations
        if (element.classList.contains('promise-card')) {
          setTimeout(() => {
            element.classList.add('animate-bounce-in');
          }, 200);
        }
        
        // Flowchart animations
        if (element.classList.contains('flowchart-step')) {
          const step = element.getAttribute('data-step');
          setTimeout(() => {
            element.classList.add('animate-scale-in');
          }, parseInt(step || '0') * 300);
        }
        
        if (element.classList.contains('flowchart-arrow')) {
          const arrow = element.getAttribute('data-arrow');
          setTimeout(() => {
            element.classList.add('animate-slide-in');
          }, parseInt(arrow || '0') * 300 + 150);
        }
        
        // Reveal cards
        if (element.classList.contains('reveal-card')) {
          element.classList.add('animate-reveal');
        }
        
        observer.unobserve(element);
      }
    });
  }, observerOptions);

  // Observe elements
  document.addEventListener('DOMContentLoaded', () => {
    const elementsToObserve = document.querySelectorAll('.counter, .metric-counter, .problem-card, .promise-card, .flowchart-step, .flowchart-arrow, .reveal-card');
    elementsToObserve.forEach(el => observer.observe(el));
    
    // Icon hover effects
    const iconBounce = document.querySelectorAll('.icon-bounce');
    iconBounce.forEach(icon => {
      icon.addEventListener('mouseenter', () => {
        const svg = icon.querySelector('svg');
        if (svg) {
          svg.style.transform = 'scale(1.1) rotate(5deg)';
        }
      });
      
      icon.addEventListener('mouseleave', () => {
        const svg = icon.querySelector('svg');
        if (svg) {
          svg.style.transform = 'scale(1) rotate(0deg)';
        }
      });
    });
  });
</script>

