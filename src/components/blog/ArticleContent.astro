---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<article class={`article-content ${className}`}>
  <slot />
</article>

<style is:global>
  .article-content {
    @apply max-w-none;
  }

  /* Typography de base */
  .article-content p {
    @apply font-crimson text-gray-700 leading-relaxed text-lg mb-8 text-justify;
  }

  /* Headings */
  .article-content h1,
  .article-content h2,
  .article-content h3,
  .article-content h4,
  .article-content h5,
  .article-content h6 {
    @apply font-crimson text-navy-900 font-bold;
    scroll-margin-top: 120px;
    position: relative;
  }

  .article-content h1 {
    @apply text-4xl mb-8 mt-12 leading-tight;
  }

  .article-content h2 {
    @apply text-3xl mb-6 mt-10 leading-tight border-l-4 border-blue-500 pl-6 py-3;
  }

  .article-content h2::before {
    content: '';
    position: absolute;
    left: -24px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    border-radius: 2px;
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  }

  .article-content h3 {
    @apply text-2xl mb-5 mt-8 leading-tight border-l-4 border-purple-500 pl-6 py-2;
  }

  .article-content h3::before {
    content: '';
    position: absolute;
    left: -24px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    border-radius: 2px;
    background: linear-gradient(135deg, #8b5cf6, #ec4899);
  }

  .article-content h4 {
    @apply text-xl mb-4 mt-6 leading-tight text-emerald-700;
  }

  /* Emphasis */
  .article-content strong {
    @apply text-navy-900 font-semibold bg-yellow-100 px-1 rounded;
  }

  .article-content em {
    @apply italic text-gray-800;
  }

  /* Links */
  .article-content a {
    @apply text-blue-600 no-underline font-medium transition-all duration-200;
    position: relative;
  }

  .article-content a:hover {
    @apply underline text-blue-700;
  }

  .article-content a::after {
    content: '→';
    @apply ml-1 inline-block transition-transform duration-200;
  }

  .article-content a:hover::after {
    transform: translateX(3px);
  }

  /* Lists */
  .article-content ul,
  .article-content ol {
    @apply mb-8 space-y-2;
  }

  .article-content li {
    @apply font-crimson text-gray-700 mb-3 leading-relaxed text-lg;
  }

  .article-content ul li {
    @apply pl-2;
  }

  .article-content ul li::marker {
    @apply text-blue-500;
    content: '▸ ';
  }

  .article-content ol li::marker {
    @apply text-purple-600 font-bold;
  }

  .article-content ul ul,
  .article-content ol ol {
    @apply mt-3 mb-3;
  }

  /* Blockquotes */
  .article-content blockquote {
    @apply border-l-4 border-amber-400 bg-amber-50 p-8 rounded-r-xl my-8 font-crimson text-lg italic;
    position: relative;
  }

  .article-content blockquote::before {
    content: '"';
    position: absolute;
    left: -15px;
    top: -15px;
    font-size: 4rem;
    color: #f59e0b;
    opacity: 0.3;
    font-family: serif;
    line-height: 1;
  }

  .article-content blockquote p {
    @apply mb-4 last:mb-0;
  }

  .article-content blockquote cite {
    @apply block mt-4 text-base not-italic text-gray-600 font-semibold;
  }

  /* Code */
  .article-content code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm font-mono text-gray-800;
  }

  .article-content pre {
    @apply bg-navy-900 text-gray-100 rounded-2xl p-6 overflow-x-auto my-8 shadow-xl;
  }

  .article-content pre code {
    @apply bg-transparent p-0 text-gray-100;
  }

  /* Tables */
  .article-content table {
    @apply w-full my-8 border-collapse;
  }

  .article-content thead {
    @apply bg-gradient-to-r from-blue-600 to-purple-600 text-white;
  }

  .article-content th {
    @apply p-4 text-left font-bold text-sm uppercase tracking-wide;
  }

  .article-content td {
    @apply p-4 border-b border-gray-200;
  }

  .article-content tbody tr:hover {
    @apply bg-gray-50;
  }

  /* Images */
  .article-content img {
    @apply rounded-2xl shadow-xl my-8 w-full;
  }

  .article-content figure {
    @apply my-8;
  }

  .article-content figcaption {
    @apply text-center text-sm text-gray-600 mt-4 italic;
  }

  /* Horizontal Rule */
  .article-content hr {
    @apply my-12 border-0 h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent;
  }

  /* Callouts / Notes */
  .article-content .callout,
  .article-content .note {
    @apply my-8 p-6 rounded-2xl border-l-4;
  }

  .article-content .callout-info {
    @apply bg-blue-50 border-blue-500;
  }

  .article-content .callout-warning {
    @apply bg-amber-50 border-amber-500;
  }

  .article-content .callout-success {
    @apply bg-emerald-50 border-emerald-500;
  }

  .article-content .callout-danger {
    @apply bg-red-50 border-red-500;
  }

  /* Footnotes */
  .article-content .footnotes {
    @apply mt-16 pt-8 border-t-2 border-gray-200;
  }

  .article-content .footnotes ol {
    @apply text-sm;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .article-content h1 {
      @apply text-3xl;
    }
    
    .article-content h2 {
      @apply text-2xl;
    }

    .article-content h3 {
      @apply text-xl;
    }
    
    .article-content p,
    .article-content li {
      @apply text-base;
    }
    
    .article-content blockquote {
      @apply p-4 text-base;
    }
    
    .article-content pre {
      @apply p-4 text-sm;
    }
  }

  /* Print styles */
  @media print {
    .article-content {
      @apply text-black;
    }
    
    .article-content a {
      @apply text-black underline;
    }
    
    .article-content a::after {
      content: ' (' attr(href) ')';
      @apply text-xs;
    }
  }

  /* Selection styling */
  .article-content ::selection {
    @apply bg-blue-200 text-navy-900;
  }

  /* Smooth scroll behavior */
  .article-content * {
    scroll-behavior: smooth;
  }
</style>