---

<div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
  <h3 class="text-lg font-bold text-navy-900 mb-4 font-crimson">Partager cet article</h3>

  <div class="flex flex-col space-y-3">
    <!-- X (Twitter) -->
    <a 
      href={twitterUrl} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="flex items-center p-3 bg-gray-900 hover:bg-black rounded-xl transition-colors group"
      aria-label="Partager sur X"
    >
      <svg class="w-5 h-5 text-white mr-3" fill="currentColor" viewBox="0 0 24 24">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      <span class="text-sm font-medium text-white">Partager sur X</span>
    </a>

    <!-- LinkedIn -->
    <a 
      href={linkedinUrl} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="flex items-center p-3 bg-blue-50 hover:bg-blue-100 rounded-xl transition-colors group"
      aria-label="Partager sur LinkedIn"
    >
      <svg class="w-5 h-5 text-blue-600 mr-3" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
      <span class="text-sm font-medium text-blue-700">Partager sur LinkedIn</span>
    </a>

    <!-- Email -->
    <a 
      href={mailUrl} 
      class="flex items-center p-3 bg-amber-50 hover:bg-amber-100 rounded-xl transition-colors group"
      aria-label="Envoyer par email"
    >
      <svg class="w-5 h-5 text-amber-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      <span class="text-sm font-medium text-amber-700">Envoyer par email</span>
    </a>

    <!-- Copier le lien -->
    <button 
      type="button" 
      id="copy-link-btn" 
      class="flex items-center p-3 bg-gray-100 hover:bg-gray-200 rounded-xl transition-colors group" 
      data-link={shareUrl}
      aria-label="Copier le lien"
    >
      <svg class="w-5 h-5 text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
      </svg>
      <span class="text-sm font-medium text-gray-700" id="copy-link-text">Copier le lien</span>
    </button>
  </div>
</div>

<script>
  // âœ… Script sans TypeScript annotations
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('copy-link-btn');
    const text = document.getElementById('copy-link-text');

    if (btn && text) {
      btn.addEventListener('click', async () => {
        try {
          const link = btn.getAttribute('data-link') || window.location.href;
          await navigator.clipboard.writeText(link);
          text.textContent = 'âœ… Lien copiÃ© !';
          setTimeout(() => {
            text.textContent = 'Copier le lien';
          }, 2000);
        } catch (error) {
          console.error('Erreur lors de la copie:', error);
          text.textContent = 'âŒ Erreur';
          setTimeout(() => {
            text.textContent = 'Copier le lien';
          }, 2000);
        }
      });
    }
  });
</script>