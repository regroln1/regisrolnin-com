---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
  <h3 class="text-lg font-bold text-navy-900 mb-4 font-crimson">Thématiques liées</h3>

  <div class="flex flex-wrap gap-2">
    {tags.map((tag) => {
      const tagUrl = `/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`;
      return (
        <a 
          href={tagUrl} 
          class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full 
                 bg-gradient-to-r from-blue-50 to-purple-50 text-navy-800 
                 border border-gray-200 hover:from-blue-100 hover:to-purple-100 
                 transition-all duration-200 hover:scale-105"
          aria-label={`Voir les articles liés à ${tag}`}
        >
          <svg class="w-3 h-3 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M4 3a2 2 0 00-2 2v3a2 2 0 002 2h1V5h7V3H4zm11 4h1a2 2 0 012 2v3a2 2 0 01-2 2h-1V7z"/>
            <path d="M5 8a2 2 0 012-2h6a2 2 0 012 2v6a2 2 0 01-2 2H7a2 2 0 01-2-2V8z"/>
          </svg>
          {tag}
        </a>
      );
    })}
  </div>
</div>
